<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnail_in_map_header_row"
            android:layout_width="300dp"
            android:layout_height="222dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/map_pin_in_map_header_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.1"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/title_in_map_header_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:text="fasdfsa"
            android:gravity="center_vertical" />

        <ImageView android:id="@+id/map_header_favorite_star"
            android:src="@drawable/ic_star_outline_grey600_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.1"
            android:contentDescription="favorit"/>

    </LinearLayout>